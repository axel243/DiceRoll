<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DiceRolls"
    tools:showIn="@layout/activity_dice_rolls"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/current_score"
        android:layout_width="69dp"
        android:layout_height="31dp"
        android:layout_marginEnd="289dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        android:text="Score: "
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:textSize="24sp" />

    <TextView
        android:id="@+id/high_score"
        android:layout_width="126dp"
        android:layout_height="31dp"
        android:layout_marginEnd="221dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="8dp"
        android:text="High Score:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_score"
        tools:textColor="@android:color/holo_red_dark"
        tools:textSize="24sp" />

    <TextView
        android:id="@+id/current_score_number"
        android:layout_width="59dp"
        android:layout_height="30dp"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="221dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="16dp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/high_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/current_score"
        app:layout_constraintTop_toTopOf="parent"
        tools:textColor="@android:color/black"
        tools:textSize="24sp" />

    <TextView
        android:id="@+id/high_score-number"
        android:layout_width="59dp"
        android:layout_height="31dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="162dp"
        android:layout_marginTop="55dp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/throw_history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/high_score"
        app:layout_constraintTop_toTopOf="parent"
        tools:textColor="@android:color/holo_red_dark"
        tools:textSize="24sp" />

    <ListView
        android:id="@+id/throw_history"
        android:layout_width="368dp"
        android:layout_height="253dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/high_score" />
</android.support.constraint.ConstraintLayout>